    <audio id="radio-player" src="https://a8.asurahosting.com:7500/radio.mp3"></audio>
    
    <script>
        const radioPlayer = document.getElementById('radio-player');
        const playButton = document.getElementById('play-button');
        const volumeProgress = document.getElementById('volume-progress');
        const volumeHandle = document.getElementById('volume-handle');
        const volumeSliderContainer = document.querySelector('.volume-slider-container');
        const volumeDown = document.getElementById('volume-down');
        const volumeUp = document.getElementById('volume-up');
        const playingStatus = document.getElementById('playing-status');
        
        let isPlaying = false;
        let volume = 0.4; // Initial volume at 40%
        
        // Set initial volume
        radioPlayer.volume = volume;
        
        // Hide playing status initially
        playingStatus.style.display = 'none';
        
        // Function to update volume UI
        function updateVolumeUI() {
            const percentage = volume * 100;
            volumeProgress.style.width = `${percentage}%`;
            volumeHandle.style.left = `${percentage}%`;
        }
        
        // Play/pause toggle
        playButton.addEventListener('click', () => {
            if (isPlaying) {
                radioPlayer.pause();
                playButton.src = 'https://res.cloudinary.com/dzfgirq6w/image/upload/v1742144855/R%C3%A1dio/radiojardimbotaoplayer.png';
                playingStatus.style.display = 'none';
            } else {
                radioPlayer.play().catch(e => {
                    console.error('Error playing audio:', e);
                    alert('Não foi possível reproduzir o áudio. Por favor, tente novamente.');
                });
                playButton.src = 'https://res.cloudinary.com/dzfgirq6w/image/upload/v1742144854/R%C3%A1dio/radiojardimbotaostop.png';
                playingStatus.style.display = 'block';
            }
            
            isPlaying = !isPlaying;
        });
        
        // Volume slider click and drag
        let isDragging = false;
        
        volumeSliderContainer.addEventListener('mousedown', handleVolumeChange);
        document.addEventListener('mousemove', (e) => {
            if (isDragging) {
                handleVolumeChange(e);
            }
        });
        document.addEventListener('mouseup', () => {
            isDragging = false;
        });
        
        // Touch support for mobile
        volumeSliderContainer.addEventListener('touchstart', handleVolumeTouch);
        volumeSliderContainer.addEventListener('touchmove', handleVolumeTouch);
        
        function handleVolumeChange(e) {
            isDragging = true;
            const rect = volumeSliderContainer.getBoundingClientRect();
            let x = e.clientX - rect.left;
            let percentage = x / rect.width;
            
            // Clamp between 0 and 1
            percentage = Math.max(0, Math.min(1, percentage));
            
            volume = percentage;
            radioPlayer.volume = volume;
            updateVolumeUI();
        }
        
        function handleVolumeTouch(e) {
            e.preventDefault();
            const rect = volumeSliderContainer.getBoundingClientRect();
            const touch = e.touches[0];
            let x = touch.clientX - rect.left;
            let percentage = x / rect.width;
            
            // Clamp between 0 and 1
            percentage = Math.max(0, Math.min(1, percentage));
            
            volume = percentage;
            radioPlayer.volume = volume;
            updateVolumeUI();
        }
        
        // Volume down button
        volumeDown.addEventListener('click', () => {
            if (volume >= 0.1) {
                volume -= 0.1;
                radioPlayer.volume = volume;
                updateVolumeUI();
            }
        });
        
        // Volume up button
        volumeUp.addEventListener('click', () => {
            if (volume <= 0.9) {
                volume += 0.1;
                radioPlayer.volume = volume;
                updateVolumeUI();
            }
        });
        
        // Handle audio errors
        radioPlayer.addEventListener('error', (e) => {
            console.error('Audio error:', e);
            alert('Erro ao carregar a rádio. Por favor, verifique sua conexão e tente novamente.');
            isPlaying = false;
            playButton.src = 'https://res.cloudinary.com/dzfgirq6w/image/upload/v1742144855/R%C3%A1dio/radiojardimbotaoplayer.png';
            playingStatus.style.display = 'none';
        });
        
        // Initialize volume UI
        updateVolumeUI();
    </script>
